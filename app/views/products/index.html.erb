<div class="container mt-4">
  <div class="row">
    <div class="col-md-3">
      <%= render 'filters' %>
    </div>
    <div class="col-md-9">
      <h1 class="mb-4">Our Organic Products</h1>
      
      <div class="row">
        <% @products.each do |product| %>
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
              <%= image_tag product.image.variant(resize: "300x300"), class: "card-img-top" if product.image.attached? %>
              <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text"><%= truncate(product.description, length: 100) %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <span class="price"><%= number_to_currency(product.current_price) %></span>
                  <%= button_to 'Add to Cart', add_to_cart_product_path(product), 
                      class: "btn btn-success", method: :post %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <%= paginate @products %>
    </div>
  </div>
</div>